<div class="panel panel-default">

 <div class="panel panel-info">
 <div class="panel-heading">Группа измерений <%= @measurement_group.name %></div>
 <div class="panel-body" style="">
<p>
      <strong>Дата создания</strong>
      <%= @measurement_group.date %>
    </p>

    <% if @measurement_group.researcherID != nil %>
    <h2>Исследователь</h2>
    <table class="table table-striped table-condensed table-bordered table-hover">
  <tr>
    <th>Имя</th>
    <th>Телефон</th>
    <th>Организация</th>
    <th>Адрес</th>
    <th>Email</th>
  </tr>


    <tr>
      <td><%= @researcher.name %></td>
      <td><%= @researcher.phone %></td>
      <td><%= @researcher.organizations %></td>
      <td><%= @researcher.address %></td>
      <td><%= @researcher.email %></td>
   </tr>

</table>
<% end %>

<% if @measurement_group.deviceID != nil %>
    <h2>Прибор</h2>
    <table class="table table-striped table-condensed table-bordered table-hover">
  <tr>
    <th>Название прибора</th>
    <th>Производитель</th>
    <th>Характеристики</th>
    <th>Модель</th>
  </tr>


    <tr>
      <td><%= @device.name %></td>
      <td><%= @device.manufacturer %></td>
      <td><%= @device.description %></td>
      <td><%= @device.model %></td>
   </tr>

</table>
<% end %>

<% if @measurement_group.sampleID != nil %>
    <h2>Образец</h2>
    <table class="table table-striped table-condensed table-bordered table-hover">
  <tr>
    <th>Название образца</th>
    <th>Weight</th>
    <th>Size</th>
    <th>М</th>
    <th>Lambda em</th>
    <th>Lambda ex</th>
    <th>Описание</th>
  </tr>


    <tr>
      <td><%= @sample.name %></td>
      <td><%= @sample.weight %></td>
      <td><%= @sample.size %></td>
      <td><%= @sample.M %></td>
      <td><%= @sample.lambda_em %></td>
      <td><%= @sample.lambda_ex %></td>
      <td><%= @sample.description %></td>
   </tr>

</table>
<% end %>

<div style="float:left;">
  <%= link_to 'Назад', measurement_groups_path, :class => 'btn btn-default btn-md' %>
  <%= link_to 'Изменить', edit_measurement_group_path(@measurement_group), :class => 'btn btn-default btn-md' %>
</div>
 </div>

 </div>



